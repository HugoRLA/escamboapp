<h1>Lista de Anuncios</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Image</th>
    <th scope="col">Title</th>
    <th scope="col">Price</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @ads.each do |ad| %>
    <tr>
      <th scope="row"><%= ad.id %></th>
      <td><%= image_tag ad.picture(:thumb)%></td>
      <td><%= ad.title  %></td>
      <td><%= ad.category.description  %></td>
      <td><%= humanized_money_with_symbol ad.price %></td>
      <th>

        <%= link_to edit_site_profile_ad_path(ad.id), class:"btn btn-primary btn-sm" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>

      </th>
    </tr>
  <% end %>
  </tbody>
</table>