<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Categorias</h1>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle" do %>
              <i class="fa fa-plus"></i>
            <% end %>

          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                  <th>#</th>
                  <th>Descriçao</th>
                  <th>Acções</th>
                </tr>
                </thead>
                <tbody>
                <% @categories.each do |category|  %>
                <tr>
                  <td> <%= category.id %> </td>
                  <td> <%= category.description %> </td>
                  <td>
                    <%= link_to edit_backoffice_category_path(category.id), class:"btn btn-primary btn-circle" do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                    <button type="button" disabled class="btn btn-danger btn-circle" ><i class="fa fa-times"></i></button>
                  </td>
                <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
