
<h1 class="page-header">Administrador</h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%= action %></h3>
  </div>
  <div class="panel-body">
    <%= form_for([:backoffice, @admin]) do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"%>
      </div>
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, class: "form-control", placeholder: "Enter Email"%>
      </div>
      <% if policy(@admin).edit? %>
        <div class="form-group">
          <%= f.label :role %>
          <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
            <div class="radio">
              <%= b.label { b.radio_button + b.text} %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
      </div>
      <div class="form-group">
        <label>Password Confirmation</label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter Password Confirmation"%>
      </div>
      <button type="submit" class="btn btn-default">Submit Button</button>
      <button type="reset" class="btn btn-default">Reset Button</button>
    <% end %>
  </div>
  <!-- /.panel-body -->
</div>
